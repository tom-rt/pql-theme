<div class="main-wrapper">
  <div class="main-column">
    <div class="cust-main">
      {% if customer.addresses_count > 1 %}
        <div class="cust-title">Modifier votre adresse</div>
        {% form 'customer_address', customer.addresses[1] %}
          <div class="form-row">
            <div class="input-container">
              <label for="name">Prénom</label>
              <input
                class="cust-input"
                type="name"
                value="{{ customer.addresses[1].first_name }}"
                name="address[first_name]"
                required
              >
            </div>
          </div>

          <div class="form-row">
            <div class="input-container">
              <label for="name">Nom</label>
              <input
                class="cust-input"
                type="name"
                value="{{ customer.addresses[1].last_name }}"
                name="address[last_name]"
                required
              >
            </div>
          </div>
          <div class="form-row">
            <div class="input-container">
              <label for="name">Adresse</label>
              <input
                class="cust-input"
                type="name"
                value="{{ customer.addresses[1].address1 }}"
                name="address[address1]"
                required
              >
            </div>
          </div>
          <div class="form-row">
            <div class="input-container">
              <label for="name">Ville</label>
              <input
                class="cust-input"
                type="name"
                value="{{ customer.addresses[1].city }}"
                name="address[city]"
                required
              >
            </div>
          </div>
          <div class="form-row">
            <div class="input-container">
              <label for="name">Code postal</label>
              <input
                class="cust-input"
                type="name"
                value="{{ customer.addresses[1].zip }}"
                name="address[zip]"
                required
              >
            </div>
          </div>
          <div class="form-row">
            <div class="input-container">
              <label for="name">Téléphone</label>
              <input
                class="cust-input"
                type="name"
                value="{{ customer.addresses[1].phone }}"
                name="address[phone]"
                required
              >
            </div>
          </div>
          <div class="cust-form-errors">
            {{ form.errors | default_errors }}
          </div>

          <div class="cust-button-container">
            <button type="submit" class="cust-button">Enregistrer</button>
          </div>
          <input
            type="hidden"
            name="return_to"
            value="{{ routes.account_url }}"
          >
        {% endform %}
      {% endif %}

      {% if customer.addresses_count == 1 %}
        <div class="cust-title">Créer une adresse</div>
        {% form 'customer_address', customer.new_address %}
          <div class="form-row">
            <div class="input-container">
              <label for="first-name">Prénom</label>
              <input class="cust-input" type="text" name="address[first_name]" required>
            </div>
          </div>

          <div class="form-row">
            <div class="input-container">
              <label for="name">Nom</label>
              <input class="cust-input" type="text" name="address[last_name]" required>
            </div>
          </div>

          <div class="form-row">
            <div class="input-container">
              <label for="name">Adresse</label>
              <input class="cust-input" type="text" name="address[address1]" required>
            </div>
          </div>

          <div class="form-row">
            <div class="input-container">
              <label for="name">Ville</label>
              <input class="cust-input" type="text" name="address[city]" required>
            </div>
          </div>

          <div class="form-row">
            <div class="input-container">
              <label for="name">Code postal</label>
              <input class="cust-input" type="text" name="address[zip]" required>
            </div>
          </div>

          <div class="form-row">
            <div class="input-container">
              <label for="name">Téléphone</label>
              <input class="cust-input" type="text" name="address[phone]" required>
            </div>
          </div>

          <div class="cust-form-errors">
            {{ form.errors | default_errors }}
          </div>

          <div class="cust-button-container">
            <button type="submit" class="cust-button">Créer adresse</button>
          </div>
          <input
            type="hidden"
            name="return_to"
            value="{{ routes.account_url }}"
          >
        {% endform %}
      {% endif %}
    </div>
  </div>
</div>
