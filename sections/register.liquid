<div class="main-wrapper">
  <div class="main-column">
    <div class="cust-main">

      <div class="cust-title">
        Créer un compte
      </div>


      {% form 'create_customer' %}

        <div class="form-row">
          <label for="first-name">Prénom</label>
          <input
            class="cust-input"
            type="text"
            name="customer[first_name]">
        </div>

        <div class="form-row">
          <label for="last-name">Nom</label>
          <input
            class="cust-input"
            type="text"
            name="customer[last_name]">
        </div>

        <div class="form-row">
          <label for="email">Email</label>
          <input
            class="cust-input"
            type="email"
            name="customer[email]">
        </div>

        <div class="form-row">
          <label for="password">Mot de passe</label>
          <input
            class="cust-input"
            type="password"
            name="customer[password]">
        </div>

        <div class="cust-form-errors">
          {{ form.errors | default_errors }}
        </div>

        <button type="submit" class="cust-button">
          Créer compte
        </button>
      {% endform %}


    </div>
  </div>
</div>