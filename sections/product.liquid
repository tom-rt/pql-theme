<div class="main-wrapper">
  <div class="main-column pt col">
    <div class="prod-container">
      <div class="prod">
        {{ 'cart.css' | asset_url | stylesheet_tag }}
        <div class="product-grid">
          <div class="prod-pic">
            <img
              class="prod-img"
              src="{{ product | img_url: 'original' }}"
              display="block"
              width="400"
              height="400"
              loading="lazy"
            >
          </div>

          <div class="prod-data">
            <div class="prod-header">
              <div class="prod-title">
                {{ product.title }}
              </div>

              <div class="product-return-container">
                <a class="link hd-box back-button-link" href="{{product.collections[0].url}}">
                  <button class="product-return-button whimsy">
                    <div class="arrow-container">
                      <img
                        class="arrow-img"
                        src="{{ 'left-arrow.png' | asset_url }}"
                        display="block"
                        width="30"
                        height="30"
                        loading="lazy"
                      >
                    </div>
                    {% comment %}
                      <div>
                        {{ product.collections[0].title }}
                      </div>
                    {% endcomment %}
                    <div>Retour</div>
                  </button>
                </a>
              </div>
            </div>

            <div class="prod-price">
              {% if product.price %}
                {{ product.price | money }}
                {% assign current_variant = product.selected_or_first_available_variant %}
                {% if current_variant.unit_price_measurement %}
                  {% if current_variant.unit_price_measurement.quantity_value == 1 %}
                    /{{ current_variant.unit_price_measurement.quantity_unit }}
                  {% else %}
                    pour
                    {{ current_variant.unit_price_measurement.quantity_value }}
                    {{ current_variant.unit_price_measurement.quantity_unit }}
                  {% endif %}
                {% endif %}
              {% endif %}
            </div>

            <div class="form-product-container">
              <select name="id" hidden>
                {% for variant in product.variants %}
                  <option
                    value="{{ variant.id }}"
                    {% if variant == product.selected_or_first_available_variant %}
                      selected="selected"
                    {% endif %}
                  >
                    {{ variant.title }} - {{ variant.price | money }}
                  </option>
                {% endfor %}
              </select>
              {% comment %}
                <input type="text" name="quantity" min="1" value="0" hidden>
                <input type="hidden" name="return_to" value="back">
              {% endcomment %}

              {% assign item-quantity = 0 %}
              {% for item in cart.items %}
                {% if product.id == item.product.id %}
                  {% assign item-quantity = item-quantity | plus: item.quantity %}
                {% endif %}
              {% endfor %}

              {% comment %}
                <div class="cart-button-container">
                  <button id="add-to-cart-button" class="product-return-button whimsy">Ajouter au panier</button>
                  {% if item-quantity > 0 %}
                    <div class="item-quantity">{{ item-quantity }} dans le panier</div>
                  {% endif %}
                </div>
              {% endcomment %}

              <div class="cart-item-data bg-green mt-1">
                <button id="minus-button" type="button" class="minus cart-quantity-selector button">
                  <img src="{{ 'white-minus.png' | asset_url }}" class="white-minus">
                </button>
                <input
                  id="qty-input"
                  type="text"
                  name="updates[]"
                  value="{{ item-quantity }}"
                  class="qty-input"
                  prodId="{{ current_variant.id }}"
                  readonly
                >
                <button id="plus-button" type="button" class="plus cart-quantity-selector">
                  <img src="{{ 'white-plus.png' | asset_url }}" class="white-plus">
                </button>
              </div>
            </div>

            <div class="prod-desc">
              {{ product.description }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

