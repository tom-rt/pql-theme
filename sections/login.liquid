<div class="main-wrapper">
  <div class="main-column">
    <div class="cust-main">

      <div class="cust-title">
        Connexion
      </div>

      {% form 'customer_login' %}
        {{ form.errors | default_errors }}

        <div class="form-row">
          <label for="email">Email</label>
          <input
            class="cust-input"
            type="email"
            name="customer[email]">
        </div>

        <div class="form-row">
          <label for="password">Mot de passe</label>
          <input
            class="cust-input"
            type="password"
            name="customer[password]">
        </div>
        <div class="forget-pwd">
          Mot de passe oublié ?
        </div>

        <button type="submit" class="cust-button">
          Connexion
        </button>

      {% endform %}
      <div class="create-account">
        Créer un compte
      </div>

    </div>
  </div>
</div>