<div class="main-wrapper">
  <div class="main-column">
    <div class="cust-main">



      <div class="cust-title">
        Connexion
      </div>

      {% form 'customer_login' %}
      <div class="form-row">
        <label for="email">Email</label>
        <input class="cust-input" type="email" name="customer[email]">
      </div>

      <div class="form-row">
        <label for="password">Mot de passe</label>
        <input class="cust-input" type="password" name="customer[password]">
      </div>


      <div class="cust-form-errors">
        {{ form.errors | default_errors }}
      </div>

      <button type="submit" class="cust-button">
        Connexion
      </button>

      {% endform %}

      <a class="link" href="{{ routes.account_register_url }}">
        <div class="cust-subtitle">
          Créer un compte
        </div>
      </a>

      <label for="forget_pwd_checkbox">
        <!-- <div class="forget-pwd"> -->
        <div class="cust-subtitle">
          Mot de passe oublié ?
        </div>
      </label>
      <input type="checkbox" id="forget_pwd_checkbox" style="display:none;">

      <div id="forget_password_section">
        {%- form 'reset_customer_password' -%}
        <!-- <div class="form-row">
          <label for="email">Email</label>
          <input type="email" name="email">
        </div> -->
        <div class="form-row">
          <label for="email">Email</label>
          <input class="cust-input" type="email" name="email">
        </div>

        <div class="cust-form-errors">
          {{ form.errors | default_errors }}
        </div>

        <button type="submit" class="cust-button">
          Envoyer
        </button>
        {% endform %}
      </div>


    </div>
  </div>
</div>

{% style %}
#forget_password_section {
display: none;
width: 100%
}
:checked + #forget_password_section {
align-items: center;
justify-content: center;
display: flex;
width: 100%
}
{% endstyle %}