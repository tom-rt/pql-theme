<div class="main-wrapper">
  <div class="main-column pt col">

    <div class="collection-header">
      <div class="collection-title">
        {{ collection.title }}
      </div>

      <div class="collection-return-container">
        <a class="link hd-box back-button-link" href="/collections">
          <button class="collection-return-button whimsy">
            <div class="arrow-container">
              <img
                class="arrow-img"
                src="{{ 'left-arrow.png' | asset_url }}"
                display="block"
                width="30"
                height="30"
                loading="lazy" />
            </div>
            <div>
              Cat√©gories
            </div>
          </button>
        </a>
      </div>

    </div>

    <div class="collections-container">
      <div class="products">
        {% for product in collection.products %}
          <div class="products-container">
            <a class="link collection-link" href={{product.url}}>
              <div class="product">

                <div class="product-name-container">
                  <div class="product-name whimsy">
                    {{ product.title }}
                  </div>
                </div>

                <img
                  src="{{ product | img_url: 'original' }}"
                  display="block"
                  width="250"
                  height="250"
                  loading="lazy" />


              </div>
            </a>
          </div>


        {% endfor %}
      </div>
    </div>

  </div>
</div>

{% style %}

  .arrow-img {}

  .arrow-container {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 0.5rem;
  }

  .back-button-link {
    display: flex;
    align-items: end;
    justify-content: end;
    background-color: red;
    width: fit-content;
    margin-top: 1rem;
    margin-right: 1rem;
  }
  @media screen and (max-width: 1000px) {
    .back-button-link {
      margin-top: 2rem;
      margin-bottom: 2rem;
    }
  }

  .collection-return-container {
    display: flex;
    width: 100%;
    align-items: end;
    justify-content: end;
  }

  .collection-return-button {
    cursor: pointer;
    background-color: var(--duck-blue);
    color: white;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    width: fit-content;
    font-size: 2rem;
  }
  @media screen and (max-width: 1000px) {
    .collection-return-button {
      font-size: 3rem;
    }
  }

  .collection-title {
    display: flex;
    width: 100%;
    font-size: 2rem;
    align-items: center;
    justify-content: start;
    margin-top: 1rem;
    margin-left: 1rem;
  }
  @media screen and (max-width: 1000px) {
    .collection-title {
      font-size: 3rem;
    }
  }

  .collection-header {
    display: flex;
    width: 100%;
  }

  .products {
    margin-top: 1rem;
    display: grid;
    gap: 1rem;
  }

  .products-container {
    display: flex;
    width: 100%;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .collection-link {
    display: flex;
    width: fit-content;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    height: 100%;
    background-color: var(--light-grey);
  }

  .product {
    height: 100%;
    width: fit-content;
    display: flex;
    align-items: center;
    justify-content: end;
    flex-direction: column;
    padding: 0.2rem 1rem 1rem;
  }

  .product-name-container {
    display: flex;
    height: 100%;
    text-align: center;
  }


  .product-name {
    text-align: center;
    display: flex;
    width: 100%;
    font-size: 1.5rem;
    align-items: center;
    justify-content: center;
  }
  @media screen and (max-width: 1000px) {
    .product-name {
      font-size: 2.5rem;
    }
  }

  @media(min-width: 100px) {
    .products {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media(min-width: 760px) {
    .products {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  @media(min-width: 1200px) {
    .products {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  @media(min-width: 1500px) {
    .products {
      grid-template-columns: repeat(5, 1fr);
    }
  }
{% endstyle %}