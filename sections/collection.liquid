<div class="main-wrapper">
  <div class="main-column pt col">

    <div class="collection-header">
      <div class="collection-title">
        {{ collection.title }}
      </div>
      <div class="collection-return-container">
        <div class="collection-return">
          <a class="link hd-box " href="/collections">
            Cat√©gories
          </a>
        </div>
      </div>
    </div>


    <div class="collections-container">
      <div class="collections">
        {% for product in collection.products %}

          <div class="collection-container">
            <a class="link collection-link" href={{product.url}}>
              <div class="collection">
                <div class="collection-name whimsy">
                  {{ product.title }}
                </div>

                <img
                  src="{{ product | img_url: 'original' }}"
                  display="block"
                  width="250"
                  height="250"
                  loading="lazy" />
              </div>
            </a>
          </div>


        {% endfor %}
      </div>
    </div>

  </div>
</div>

{% style %}
  .collection-title {
    display: flex;
    width: 100%;
    font-size: 2rem;
    align-items: center;
    justify-content: start;
    margin-top: 1rem;
    margin-left: 1rem;
  }
  @media screen and (max-width: 1000px) {
    .collection-title {
      font-size: 3rem;
    }
  }


  .collections-container {}

  .collection-return-container {
    display: flex;
    width: 100%;
    align-items: end;
    justify-content: end;
  }

  .collection-return {
    color: var(--duck-blue);
    margin-top: 1rem;
    margin-right: 1rem;
    text-align: end;
    width: fit-content;
    font-size: 2rem;
  }
  @media screen and (max-width: 1000px) {
    .collection-title {
      font-size: 3rem;
    }
  }

  .collection-header {
    display: flex;
    width: 100%;
  }

  .collections {
    margin: 1rem auto 0;
    display: grid;
    gap: 1rem;

  }

  .collection-container {
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: center;
  }

  .collection-link {
    display: flex;
    width: fit-content;
    align-items: center;
    justify-content: center;
    cursor: pointer;
  }

  .collection {
    /* width: 100%; */
    width: fit-content;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding: 0.2rem 1rem 1rem;
    background-color: var(--light-grey);
  }

  .collection-name {
    display: flex;
    width: 100%;
    font-size: 2rem;
    align-items: center;
    justify-content: center;
  }
  @media screen and (max-width: 1000px) {
    .collection-name {
      font-size: 3rem;
    }
  }


  @media(min-width: 100px) {
    .collections {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media(min-width: 760px) {
    .collections {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media(min-width: 1200px) {
    .collections {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media(min-width: 1500px) {
    .collections {
      grid-template-columns: repeat(5, 1fr);
    }
  }
{% endstyle %}