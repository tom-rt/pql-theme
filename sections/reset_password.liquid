<div class="main-wrapper">
  <div class="main-column">
    <div class="cust-main">


      {% form 'reset_customer_password' %}

      <div class="form-row">
        <input class="cust-input" type="password" name="customer[password]" id="password">
        <label for="password">Mot de passe</label>
      </div>

      <div class="form-row">
        <input class="cust-input" type="password" name="customer[password_confirmation]" id="password_confirmation">
        <label for="password_confirmation">Confirmation du mot de passe</label>
      </div>

      <div class="cust-form-errors">
        {{ form.errors | default_errors }}
      </div>

      <button type="submit" class="cust-button">
        Changer le mot de passe
      </button>

      {% endform %}

    </div>
  </div>
</div>