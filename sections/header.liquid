<div class="hd-main">
  <div class="header-column">
    <div class="header-wrapper">
      <div class="header">
        <div class="logo-box">
          <a class="link hd-box" href="/">
            <img
              loading='lazy'
              class="img hd-caddie"
              src={{ 'caddie.png' | asset_url }} />
          </a>
        </div>
        <a class="link hd-box " href="/">
          <div class="pql-container">
            <div class="pql">Pierre</div>
            <div class="pql-subcontainer">
              <div class="pql">qui</div>
              <div class="pql orange">roule</div>
            </div>
          </div>
        </a>
      </div>

      <div class="search-bar-container">
        <form action="{{ routes.search_url }}" class="search-form">
          <input
            required
            class="search-bar"
            type="text"
            placeholder="Rechercher un produit"
            name="q"
            minlength="2"
            value="{{ search.terms | escape }}">
          <input
            type="hidden"
            name="type"
            value="product" />
          <button class="glass-button">
            <img src={{ 'glass.png' | asset_url }} class="glass-img" />
          </button>
        </form>
      </div>

      <div class="socials">
        {%- comment -%}
        <div class="fb-wrapper">
        <img loading='lazy' width="inherit" height="35" class="img fb" src={{ 'cart-icon.png' | asset_url }}/>
        </div>
        {%- endcomment -%}
        <div class="fb-wrapper">
          <a
            class="link"
            target="_blank"
            href="https://www.facebook.com/epicerie.pierrequiroule">
            <img
              loading='lazy'
              width="inherit"
              class="img hd-fb pointer"
              src={{ 'fb.png' | asset_url }} />
          </a>
        </div>
        <div class="insta">
          <a
            class="link"
            target="_blank"
            href="https://www.instagram.com/epicerie.pierrequiroule/?hl=fr">
            <img
              loading='lazy'
              width="inherit"
              class="img hd-insta pointer"
              src={{ 'insta.png' | asset_url }} />
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="hd-menu" id="section-header">

    {% for link in linklists.main-menu.links %}

      <div class="parent-link-container">
        {% if link.links == blank %}
          <a class="link hd-box hd-pd border-right" href="{{ link.url }}">
            {{ link.title }}
          </a>
        {% endif %}
        {% if link.links != blank %}
          <label for="my_checkbox" class="checkbox-trick">
            <div class="hd-box hd-pd border-right white-btop min-link-height" href="{{ link.url }}">
              {{ link.title }}
            </div>
          </label>
        {% endif %}
      </div>

      {% if link.links != blank %}
        <input
          type="checkbox"
          id="my_checkbox"
          style="display:none;">
        <div id="child-link-container-id" class="child-link-container">

          <label for="my_checkbox" class=" width-0 checkbox-trick">
            <div class="background-overlay"></div>
          </label>
          <label for="my_checkbox" class="checkbox-trick">
            {% for child_link in link.links %}
              <div class="yy">
                <div class="xx">
                  <div class="child-link-filler"></div>
                  <a class="link child-link hd-box {% if forloop.index != link.links.size %} white-bbottom {% endif %} {% if forloop.index == 1 %} white-btop {% endif %}" href="{{ child_link.url }}">
                    {{ child_link.title }}
                  </a>
                  <div class="child-link-filler"></div>
                </div>
              </div>


            {% endfor %}
          </label>

        </div>
      {% endif %}

    {% endfor %}

  </div>
</div>

{% schema %}
  {
    "settings": [
      {
        "type": "link_list",
        "id": "menu",
        "label": "Menu"
      }
    ]
  }
{% endschema %}

{% style %}

  .child-link {
    width: 100%;
    background-color: #28241B;
    box-sizing: border-box;

    /* border-style: solid;
  border-width: 1px;
  border-color: white;
  border-left: none;
  border-right: none; */

    min-height: 3rem;
  }
  @media screen and (max-width: 1000px) {
    .child-link {
      height: 7rem;
      font-size: 3rem;
    }
  }

  .child-link-filler {
    display: flex;
    width: 100%;
    opacity: 0;
    /* background-color:none */
  }

  .yy {
    display: flex;
    width: 100%;
    flex-direction: row;
  }

  .xx {
    display: flex;
    width: 100%;
    flex-direction: row;
  }

  .background-overlay {
    position: fixed;
    z-index: -1;
    height: 1000rem;
    width: 1000rem;
    /* top: 0;
    bottom: 0; */
    /* background-color: aliceblue; */
    opacity: 0;
  }

  .checkbox-trick {
    display: flex;
    width: 100%;
    flex-direction: column;
    /* background-color: green; */
  }

  .width-0 {
    width: 0 !important;
  }

  #child-link-container-id {
    display: none;
    width: 100%
  }
  :checked + #child-link-container-id {
    display: flex;
  }

  .parent-link-container {
    width: 100%;
    display: flex
  }

  .child-link-container {
    position: absolute;
    bottom: -6rem;
    width: 50%;
  }
  @media screen and (max-width: 1000px) {
    .child-link-container {
